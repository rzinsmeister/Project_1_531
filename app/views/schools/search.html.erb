<body>
  <div id="header">
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <ul class="nav">
          <li class="divider-vertical"></li>
          <li class="active"><%= link_to 'Home', root_path %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to 'School Directory', schools_path %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to 'Student Directory', students_path %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to "Reports", report_index_url %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to "Logout", logout_path %></li>
          <li class="divider-vertical"></li>
         <div id="userlogin"> <li><%= session[:username] %></li></div>
        </ul>      
      </div>
    </div>
  </div>
<div id="page">
<div id="searchtitle" class="well">
<h2>Search Results</h2>
</div>

<% if @schools.empty? %>
  <h3 class="alert">No schools with that name.</h3>  
  
<% else%>

<table class="table">
  <tr>
    <th>School Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Phone</th>
    <th>Social Worker</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= school.name %></td>
    <td><%= school.street %></td>
    <td><%= school.city %></td>
    <td><%= school.state %></td>
    <td><%= school.zip %></td>
    <td><%= school.phone %></td>
    <td><%= school.ssw %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<% end %>
<div class="btn">
<%= link_to 'Back', root_path %>
</div>

</div>

</body>
